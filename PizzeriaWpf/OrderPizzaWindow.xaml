        <ComboBox x:Name="comboBoxPizza" HorizontalAlignment="Left" Margin="94,46,-84,0" VerticalAlignment="Top" Width="282" SelectionChanged="comboBoxPizza_SelectionChanged"/>
        <Label x:Name="label_Copy1" Content="Посетитель:" HorizontalAlignment="Left" Margin="11,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxVisitor" HorizontalAlignment="Left" Margin="94,10,-84,0" VerticalAlignment="Top" Width="282"/>
        <Label x:Name="label_Copy4" Content="Сумма:" HorizontalAlignment="Left" Margin="11,114,0,0" VerticalAlignment="Top" Width="78"/>
        <TextBox x:Name="textBoxSum" HorizontalAlignment="Left" Height="23" Margin="94,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" IsEnabled="False"/>

    </Grid>
</Window>
